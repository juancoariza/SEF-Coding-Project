<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="mainLoginScreen" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
            minWidth="-Infinity" prefHeight="500.0" prefWidth="600.0" styleClass="root"
            stylesheets="@../Stylesheets/iCodeFitAccountCreateStyle.css" xmlns="http://javafx.com/javafx/10.0.1"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controllers.iCFAccountCreateController">
    <padding>
        <Insets bottom="200.0" left="200.0" right="200.0" top="200.0"/>
    </padding>
    <children>
        <ImageView fitHeight="500.0" fitWidth="600.0">
            <image>
                <Image url="@../Images/sampleMainBackgroud.jpg"/>
            </image>
        </ImageView>
        <PasswordField fx:id="mainPasswordInfo" layoutX="135.0" layoutY="187.0" prefHeight="37.0" prefWidth="307.0"
                       promptText="Enter password:">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </padding>
        </PasswordField>
        <Button fx:id="createAcctButton" layoutX="135.0" layoutY="423.0" mnemonicParsing="false" prefHeight="30.0"
                prefWidth="150.0" stylesheets="@iCodeFitAccountCreateStyle.css" text="Create account"/>
        <Label fx:id="mainPasswordLabel" layoutX="135.0" layoutY="149.0" text="Password (minimum of 8 characters)"/>
        <Label fx:id="mainEmailLabel" layoutX="135.0" layoutY="75.0" stylesheets="@iCodeFitAccountCreateStyle.css"
               text="Email"/>
        <TextField fx:id="mainUsernameInfo" layoutX="135.0" layoutY="113.0" prefHeight="25.0" prefWidth="307.0"
                   promptText="Enter email address: (sample@mail.com)"/>
        <Label fx:id="acctText" layoutX="170.0" layoutY="27.0" prefHeight="48.0" prefWidth="238.0"
               stylesheets="@iCodeFitAccountCreateStyle.css" text="Create An Account" textAlignment="CENTER">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </padding>
            <font>
                <Font name="Lucida Sans Demibold" size="12.0"/>
            </font>
        </Label>
        <PasswordField fx:id="confirmPasswordInfo" layoutX="135.0" layoutY="308.0" prefHeight="37.0" prefWidth="307.0"
                       promptText="Enter password:">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </padding>
        </PasswordField>
        <Label fx:id="confirmPasswordLabel" layoutX="135.0" layoutY="280.0" text="Confirm Password"/>
        <Button layoutX="300.0" layoutY="423.0" mnemonicParsing="false" prefHeight="30.0" prefWidth="150.0"
                text="Cancel"/>
        <Label fx:id="shortPasswordErrorMSG" layoutX="136.0" layoutY="233.0"
               text="* Password must be at minimum eight (8) characters"/>
        <Label fx:id="passwordMismatchErrorMSG" layoutX="136.0" layoutY="354.0"
               text="* Passwords do not match. Please try again"/>
    </children>
</AnchorPane>
